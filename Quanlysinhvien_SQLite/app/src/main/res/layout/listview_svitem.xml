<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/txt_ten"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tên:   "
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/txt_namsinh"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Năm sinh:   "
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/txt_lop"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lớp:   "
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/txt_dt"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Điểm Toán:   "
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/txt_tin"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Điểm Tin:   "
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/txt_ta"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Điểm Tiếng Anh:   "
        android:textSize="20dp" />

</LinearLayout>